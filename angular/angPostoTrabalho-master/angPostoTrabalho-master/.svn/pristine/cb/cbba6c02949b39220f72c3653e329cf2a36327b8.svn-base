
	<div class="container-full">		
			<div class="card bg-light">
				<div class="card-header"><br><br>
					<h2 style="font-size:22px; color:#434343; text-align:center;">  Selecione posto de trabalho </h2>
					
				</div>
				<br><br>
			    <div class="row text-center" style="width:100%; height:100%;">
						<div class="col-sm-6 col-lg-2 py-2"  *ngFor="let pos of posto;">
								<div class="card h-100">                              
									<div class="card-body">
											<a href=""> <img [src]="srcImgPosto" class="mx-auto d-block" style="height: 85px; width: 75px;" ><br/><br>
												<h5 class="card-title text-white">{{ pos.potr_nome_posto }}</h5>
												<p class="card-text text-white"> {{ pos.potr_linh_id }} </p>  </a>                            
									</div>
								</div>
							</div>          
	
			  </div>
			  <br><br>
			</div> <!-- fecha a row -->
	
							
				
	
	  </div>
	  
	  
	
		<form action=""	method="post" id="form-atividade_posto_trabalho" >
			<input type="hidden" id="produtoHidden"	name="produto" 	value="">
			<input type="hidden" id="qtdHidden"		name="qtd"		value="">
			<input type="hidden" id="linhaHidden"	name="linha"	value="">
		</form>
	
	
	
	